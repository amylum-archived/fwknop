item do
  expected do
    github_tag
    repo 'mrash/fwknop'
    filter /^[\d.]+$/
  end

  actual do
    git_tag
    regex /^(.*)-\d+$/
  end

  deps do
    %w(libpcap gpgme libgpg-error libassuan).each do |dep|
      item do
        name dep

        expected do
          github_release
          repo "amylum/#{dep}"
        end

        actual do
          grep
          file 'Makefile'
          regex /^#{dep.upcase}_VERSION = ([\d.-]+)$/
        end
      end
    end
  end
