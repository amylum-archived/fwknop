name 'fwknop'
org 'amylum'

licenses 'COPYING'

deps(
  libpcap: {
    version: '1.8.1-15',
    checksum: '4a0894bf16a9b271359d3be1baea23925e51f9f0071a60043f687310df021289'
  },
  gpgme: {
    version: '1.9.0-3',
    checksum: 'd1527520280d6f8af27b99888d4d21cfff7ed9ea5b02fe6d541b88ae8122a730'
  },
  'libgpg-error': {
    version: '1.27-1',
    checksum: '7ae57f06296bf6ef98fc450f7ef7d1a47753d429c1cdc440045a03ed108d58de'
  },
  libassuan: {
    version: '2.5.1-1',
    checksum: '42030909765a93a1da85f30097831b3a13b297c11c2b43d2845511b82c367791'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  localstatedir: '/var',
)
remove_linker_archives

cflags
harden

build do
  run 'autoreconf -fiv'
  configure
  make
  install
end

test do
  run 'fwknop -V'
end
