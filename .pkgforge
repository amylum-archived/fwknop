name 'fwknop'
org 'amylum'

licenses 'COPYING'

deps(
  libpcap: {
    version: '1.9.0-4',
    checksum: '1ee2c6dfbf1c65d48011b9e9771ebb9adb0e62de8d2c29fd24feae616c44ead1'
  },
  gpgme: {
    version: '1.12.0-5',
    checksum: 'c5e69a769ed47c6a371e49dbb5fdeefe2f35d029717d5c1eae439111f20e7580'
  },
  'libgpg-error': {
    version: '1.35-1',
    checksum: '1930a9879a364751e2486ee796d8c081b3a5307aa1e70f5b84e15b612b9d120b'
  },
  libassuan: {
    version: '2.5.2-3',
    checksum: '2e824c49d94941fe4dd45da18482e46e6fc47ea9db52ce098a023d5fa7dec600'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  localstatedir: '/var',
)
remove_linker_archives

cflags
harden

build do
  run 'autoreconf -fiv'
  configure
  make
  install
end

test do
  run 'fwknop -V'
end
