name 'fwknop'
org 'amylum'

licenses 'COPYING'

deps(
  libpcap: {
    version: '1.8.1-15',
    checksum: '4a0894bf16a9b271359d3be1baea23925e51f9f0071a60043f687310df021289'
  },
  gpgme: {
    version: '1.9.0-2',
    checksum: '8609479e4c5f254fef80d803be0485d3eef64ce7b9128e28ba3ba72377b58a28'
  },
  'libgpg-error': {
    version: '1.27-1',
    checksum: '7ae57f06296bf6ef98fc450f7ef7d1a47753d429c1cdc440045a03ed108d58de'
  },
  libassuan: {
    version: '2.4.4-1',
    checksum: 'a6deb725615c8557fc241668022e716437cd933a1bec0e9ea6f860197250da00'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  localstatedir: '/var',
)
remove_linker_archives

cflags
harden

build do
  run 'autoreconf -fiv'
  configure
  make
  install
end

test do
  run 'fwknop -V'
end
