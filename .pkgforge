name 'fwknop'
org 'amylum'

licenses 'COPYING'

deps(
  libpcap: {
    version: '1.8.1-17',
    checksum: '2b1a6cad248448728a47c0e25b7b1f4ab610eb2232537aa7434fc1eb939764e1'
  },
  gpgme: {
    version: '1.10.0-3',
    checksum: '4613aefcdc8be1f32913d767ff7531dea44e34c4c9a0209cae2ed9a292d875ea'
  },
  'libgpg-error': {
    version: '1.29-1',
    checksum: '34c4ab5446b371eaacb7dd57b24d823a42436c370ce5886db7a5c468892b0da0'
  },
  libassuan: {
    version: '2.5.1-3',
    checksum: '81b0eeffe6c3422606a72c479392474a9b815558418133c04376c01c1ee6046b'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  localstatedir: '/var',
)
remove_linker_archives

cflags
harden

build do
  run 'autoreconf -fiv'
  configure
  make
  install
end

test do
  run 'fwknop -V'
end
