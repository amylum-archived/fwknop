name 'fwknop'
org 'amylum'

licenses 'COPYING'

deps(
  libpcap: {
    version: '1.8.1-18',
    checksum: 'bb3a2fcc62bdb42082c4060ae6269e60b2aab822239bd31b4995055fa443cda5'
  },
  gpgme: {
    version: '1.11.1-2',
    checksum: 'd50e1d04c569f9adcac0d16becd581d1e75bc21fa3905ca3b6e733f7439e532b'
  },
  'libgpg-error': {
    version: '1.30-1',
    checksum: 'b9c60db131776b8c73df89c165150a567e4e52d617e1659b702acc8417bf52c6'
  },
  libassuan: {
    version: '2.5.1-4',
    checksum: 'd19b9b06a33781b466c46b4e4a63c660cd62f392e7ac64c81879ae3610993280'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  localstatedir: '/var',
)
remove_linker_archives

cflags
harden

build do
  run 'autoreconf -fiv'
  configure
  make
  install
end

test do
  run 'fwknop -V'
end
