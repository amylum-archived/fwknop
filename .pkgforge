name 'fwknop'
org 'amylum'

licenses 'COPYING'

deps(
  libpcap: {
    version: '1.8.1-18',
    checksum: 'bb3a2fcc62bdb42082c4060ae6269e60b2aab822239bd31b4995055fa443cda5'
  },
  gpgme: {
    version: '1.11.1-3',
    checksum: '8ad569be015944b8b7b465155b2ae0adff56325925b5eb3c2d278d06c7ffb1d5'
  },
  'libgpg-error': {
    version: '1.31-1',
    checksum: '8f405a9f6936a5e17e992bd69211a0e22cfa52a18abcc8eb217ea86a1871085a'
  },
  libassuan: {
    version: '2.5.1-5',
    checksum: '644c7fc29d2b92e0226a156ab37561b50f0cae23675ba0b64728c23daf8c528e'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  localstatedir: '/var',
)
remove_linker_archives

cflags
harden

build do
  run 'autoreconf -fiv'
  configure
  make
  install
end

test do
  run 'fwknop -V'
end
