name 'fwknop'
org 'amylum'

licenses 'COPYING'

deps(
  libpcap: {
    version: '1.9.0-3',
    checksum: '9eded7b339b39300ad1b35f61756c1b05306ac7403f0e66c9dbe170fc37c92fb'
  },
  gpgme: {
    version: '1.12.0-1',
    checksum: '8ed66eed2cbf4834f6e32edcc38e70a0b785902fdba6aecd8068ea0778da2894'
  },
  'libgpg-error': {
    version: '1.31-1',
    checksum: '8f405a9f6936a5e17e992bd69211a0e22cfa52a18abcc8eb217ea86a1871085a'
  },
  libassuan: {
    version: '2.5.1-5',
    checksum: '644c7fc29d2b92e0226a156ab37561b50f0cae23675ba0b64728c23daf8c528e'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  localstatedir: '/var',
)
remove_linker_archives

cflags
harden

build do
  run 'autoreconf -fiv'
  configure
  make
  install
end

test do
  run 'fwknop -V'
end
