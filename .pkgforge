name 'fwknop'
org 'amylum'

licenses 'COPYING'

deps(
  libpcap: {
    version: '1.8.1-13',
    checksum: '931d591bb93a677ebddfc9260bbb6285a509cea7d94c9147603e5c5fcf188310'
  },
  gpgme: {
    version: '1.9.0-1',
    checksum: '8ff565d5f352d2cbb6505ab20154061c3823fd7425efbe507abb0abc17e28c32'
  },
  'libgpg-error': {
    version: '1.27-1',
    checksum: '7ae57f06296bf6ef98fc450f7ef7d1a47753d429c1cdc440045a03ed108d58de'
  },
  libassuan: {
    version: '2.4.3-12',
    checksum: '41bdfda2cc5da83d6c77c42212697ad6bc40d444d9e9c1470e7d561bb1f5c249'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  localstatedir: '/var',
)
remove_linker_archives

cflags
harden

build do
  run 'autoreconf -fiv'
  configure
  make
  install
end

test do
  run 'fwknop -V'
end
