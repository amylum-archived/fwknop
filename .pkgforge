name 'fwknop'
org 'amylum'

licenses 'COPYING'

deps(
  libpcap: {
    version: '1.9.0-5',
    checksum: '22ee8a0781dbc523f6146ecd2733f45219d197a13902ccd4673f0e8f33f8f6f7'
  },
  gpgme: {
    version: '1.12.0-6',
    checksum: '7d05c915c686d9d4079742bad8de1d4ad617f5c03ba2209b4dcf411d5a113d15'
  },
  'libgpg-error': {
    version: '1.35-1',
    checksum: '1930a9879a364751e2486ee796d8c081b3a5307aa1e70f5b84e15b612b9d120b'
  },
  libassuan: {
    version: '2.5.3-1',
    checksum: '01e48328f1d2442d8a06ed1890b3a642f73f6f56345ec59be9a989adea801cd8'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  localstatedir: '/var',
)
remove_linker_archives

cflags
harden

build do
  run 'autoreconf -fiv'
  configure
  make
  install
end

test do
  run 'fwknop -V'
end
