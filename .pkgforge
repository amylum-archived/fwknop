name 'fwknop'
org 'amylum'

licenses 'COPYING'

deps(
  libpcap: '1.7.4-4',
  gpgme: '1.7.1-1',
  'libgpg-error': '1.24-7',
  libassuan: '2.4.3-9'
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  localstatedir: '/var',
)
remove_linker_archives

cflags
harden

build do
  run 'autoreconf -fiv'
  configure
  make
  install
end

test do
  run 'fwknop -V'
end
