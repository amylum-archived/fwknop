name 'fwknop'
org 'amylum'

licenses 'COPYING'

deps(
  libpcap: {
    version: '1.9.0-4',
    checksum: '1ee2c6dfbf1c65d48011b9e9771ebb9adb0e62de8d2c29fd24feae616c44ead1'
  },
  gpgme: {
    version: '1.12.0-3',
    checksum: '79d1acb0643c949c5c152d3e3a587552bdb7dc003fe6b80b663b7d0ba6dfd7da'
  },
  'libgpg-error': {
    version: '1.35-1',
    checksum: '1930a9879a364751e2486ee796d8c081b3a5307aa1e70f5b84e15b612b9d120b'
  },
  libassuan: {
    version: '2.5.2-2',
    checksum: '3f6361f4404e110eb416a5274e00c2c97107370e348e0c1490bb9e56cfe19d9d'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  localstatedir: '/var',
)
remove_linker_archives

cflags
harden

build do
  run 'autoreconf -fiv'
  configure
  make
  install
end

test do
  run 'fwknop -V'
end
