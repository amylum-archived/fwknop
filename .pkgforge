name 'fwknop'
org 'amylum'

licenses 'COPYING'

deps(
  libpcap: {
    version: '1.8.1-16',
    checksum: '378cfcd3ebd31fa8d4e6d2f8d14c09acd37e90189128437443cbde954509dbee'
  },
  gpgme: {
    version: '1.10.0-2',
    checksum: 'abd4f6a6f3ed7e7e1db5f0762f04a05d9127b27514617be07a143eae49e67562'
  },
  'libgpg-error': {
    version: '1.28-1',
    checksum: '55eec88e8ef7164bc4c2a851fb1f8128f3fe0b0a5e464db77725affb19191f6e'
  },
  libassuan: {
    version: '2.5.1-2',
    checksum: '01e2a567ab7d555245856556f240f7ecc00d0a69cbc06db8bb7a26c46571229b'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  localstatedir: '/var',
)
remove_linker_archives

cflags
harden

build do
  run 'autoreconf -fiv'
  configure
  make
  install
end

test do
  run 'fwknop -V'
end
